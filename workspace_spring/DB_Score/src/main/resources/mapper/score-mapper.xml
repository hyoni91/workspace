<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="scoreMapper">

    <resultMap id="stuInfo" type="com.green.DB_Score.vo.DBScoreVO">
        <result column="STU_NUM" property="stuNum" />
        <result column="STU_NAME" property="stuName" />
        <result column="KOR_SCORE" property="korScore" />
        <result column="ENG_SCORE" property="engScore" />
        <result column="INTRO" property="intro" />
    </resultMap>

    <!-- 목록조회 -->
    <select id="select" resultMap="stuInfo" >
        SELECT *
        FROM SCORE_INFO
    </select>

    <!-- 등록 -->
    <insert id="insert">
        INSERT INTO SCORE_INFO
        VALUES(
        #{stuNum}
        , #{stuName}
        , #{korScore}
        , #{engScore}
        , #{intro}
        );
    </insert>

    <!-- 상세페이지 -->
    <select id="stuInfo" resultMap="stuInfo">
        SELECT *
        FROM SCORE_INFO
        WHERE STU_NUM = #{stuNum}
    </select>

    <!-- 수정 -->
    <update id="update">
        UPDATE SCORE_INFO
        SET
        STU_NAME = #{stuName}
        , KOR_SCORE = #{korScore}
        , ENG_SCORE = #{engScore}
        , INTRO = #{intro}
        WHERE
        STU_NUM = #{stuNum}
    </update>

    <delete id="delete">
        DELETE
        FROM SCORE_INFO
        WHERE STU_NUM = #{stuNum}
    </delete>

	
</mapper>































